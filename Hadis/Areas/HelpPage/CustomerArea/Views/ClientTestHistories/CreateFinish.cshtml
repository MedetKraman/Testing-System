@{
    ViewBag.Title = ViewBag.Thema;
}

<h2 class="text-center">Тест "@(ViewBag.Thema)"</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("clientTestHistoryId", (int)ViewBag.ClientTestHistoryId)

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="comment" class="control-label col-md-2">Комментарии</label>
            <div class="col-md-10">
                @Html.Editor("comment", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Завершить" class="btn btn-default" />
            </div>
        </div>
    </div>
}
