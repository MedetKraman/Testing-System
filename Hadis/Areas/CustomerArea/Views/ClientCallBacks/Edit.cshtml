@model Hadis.Models.DBModels.ClientCallBack

@{
    ViewBag.Title = "Закрыть тему";
}

<h2 class="text-center">Закрыть тему</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(u => u.DateTime)
        @Html.HiddenFor(u => u.Thema)
        @Html.HiddenFor(u => u.IsThemaClosed, true)
        @Html.HiddenFor(u => u.ClientId)

        <div class="form-group">
            @Html.LabelFor(model => model.SatisfactionScore, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.SatisfactionScore, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SatisfactionScore, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Закрыть" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>
