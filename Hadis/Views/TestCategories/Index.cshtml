@model IEnumerable<Hadis.Models.DBModels.TestCategory>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Категория тестов</h2>

<p>
    @Html.ActionLink("Добавить новый", "Create", routeValues: new { },
    htmlAttributes: new { @class="btn btn-sm btn-primary" })
    @Html.ActionLink("Тесты", "Index", routeValues: new { controller= "TestThemas" },
    htmlAttributes: new { @class= "float-right" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детали", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
