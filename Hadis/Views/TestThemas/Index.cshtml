@model IEnumerable<Hadis.Models.DBModels.TestThema>

@{
    ViewBag.Title = "База тестов";
}

<h2 class="text-center">База тестов</h2>
<p>
    @Html.ActionLink("Добавить новый тест", "Create", routeValues: new { },
    htmlAttributes: new { @class="btn btn-sm btn-primary" })
    @Html.ActionLink("Категория", "Index", routeValues: new { controller= "TestCategories" },
    htmlAttributes: new { @class= "float-right" })
</p>

<div class="row">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Thema)
            </th>
            <th>
                Категория
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActual)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Thema)
                </td>
                <td>
                    @Html.ActionLink("Категория", "Index", routeValues: new { controller = "TestCategoryTestThemas", testThemaId = item.Id },
                   htmlAttributes: new { })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActual)
                </td>
                <td>
                    @Html.ActionLink("Обновить", "Update", new { id = item.Id, createNew = true }) |
                    @Html.ActionLink("Открыть", "Details", new { id = item.Id }) |
                    @if (item.IsActual)
                    {
                        @Html.ActionLink("Не актуальный", "NotRelevant", new { id = item.Id })
                    }
                    else
                    {
                        @Html.ActionLink("Актуальный", "Relevant", new { id = item.Id })
                    }
                </td>
            </tr>
        }

    </table>
</div>