@model Hadis.Models.DBModels.TestCategoryTestThema

@{
    ViewBag.Title = "Добавить категорию";
}

<h2 class="text-center">Добавить категорию для теста "@ViewBag.TestThema"</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(u => u.TestThemaId)
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Категория
            <div class="col-md-10">
                @Html.DropDownList("TestCategoryId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TestCategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index", routeValues: new { testThemaId = Model.TestThemaId })
</div>
