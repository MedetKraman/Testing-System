@model IEnumerable<Hadis.Models.DBModels.ClientTestHistory>

@{
    ViewBag.Title = "История тестирования";
}

<h2 class="text-center">История тестирования</h2>

<table class="table">
    <tr>
        <th>
            Пользователь
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TestThema.Thema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Point)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPoint)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Client.User.UserName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestThema.Thema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @( (int)item.Point )
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.ActionLink("Детали", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
